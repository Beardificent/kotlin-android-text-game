<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameScreen" android:background="#0C0C0C">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp" app:srcCompat="@drawable/charmander" android:id="@+id/gameImageView"
                android:layout_weight="3" android:layout_marginLeft="20dp" android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"/>
        <TextView
                android:text="This is where text will go"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/gameTextView" android:textColor="#F8F4F4"
                android:gravity="center|center_horizontal|center_vertical" android:textSize="18sp"
                android:layout_weight="3"
                android:layout_margin="20dp"/>
        <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/gameChoice1" android:layout_weight="1"
                android:layout_marginLeft="50dp" android:layout_marginRight="50dp"/>
        <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/gameChoice2" android:layout_weight="1"
                android:layout_marginLeft="50dp" android:layout_marginRight="50dp"/>
        <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/gameChoice3" android:layout_weight="1"
                android:layout_marginLeft="50dp" android:layout_marginRight="50dp"/>
        <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/gameChoice4" android:layout_weight="1"
                android:layout_marginLeft="50dp" android:layout_marginRight="50dp" android:layout_marginBottom="50dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>