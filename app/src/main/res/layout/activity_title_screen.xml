<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TitleScreen" android:background="@android:color/background_dark">

    <TextView
            android:text="Into the Woods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/titleTextView"
            android:textColor="#F8F1F1" android:textSize="36sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp" android:gravity="center_horizontal|center_vertical"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="425dp" app:srcCompat="@drawable/pixelforest2" android:id="@+id/titleImageView"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView" android:layout_marginBottom="43dp"
            app:layout_constraintBottom_toTopOf="@+id/titleButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="5dp" android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp" android:layout_marginStart="5dp"/>
    <Button
            android:text="START"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/titleButton"
            android:textSize="28sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>